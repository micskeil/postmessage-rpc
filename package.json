{
  "name": "@micskeil/postmessage-rpc",
  "version": "0.1.0",
  "keywords": [
    "postMessage",
    "rpc",
    "iframe",
    "window",
    "communication"
  ],
  "homepage": "https://github.com/micskeil/postmessage-rpc#readme",
  "bugs": {
    "url": "https://github.com/micskeil/postmessage-rpc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/micskeil/postmessage-rpc.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/pluginInterface.js",
      "require": "./dist/pluginInterface.cjs"
    }
  },
  "main": "./dist/pluginInterface.cjs",
  "module": "./dist/pluginInterface.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "BUILD_LIB=1 vite build",
    "build:watch": "BUILD_LIB=1 vite build --watch",
    "dev": "vite --port 8765",
    "examples": "vite --port 8765 --open /examples/",
    "lint": "npx eslint . --ext .js,.mjs,.cjs,.json",
    "lint-fix": "npx eslint . --ext .js,.mjs,.cjs,.json --fix",
    "prepare": "husky install",
    "preview": "vite preview",
    "test": "vitest --coverage --reporter default --run",
    "test:watch": "vitest --reporter default",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/jsdom": "^27.0.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "prettier": "3.6.2",
    "static-server": "^2.2.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "unplugin-auto-import": "^20.2.0",
    "vite": "^7.1.9",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
